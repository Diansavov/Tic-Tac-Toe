@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@section Styles{
    <link rel="stylesheet" href="~/css/user.css" />
}

<div class="text-center">

    <h1 class="display-1">Tic-Tac-Toe</h1>
    <br />
    <br />
    <form method="post">
        <div class="grid-container">
            <input type="submit" class="button" id="btn1" value="@Model.SelectedCells[1]" asp-route-cell="1" />
            <input type="submit" class="button item1" id="btn2" value="@Model.SelectedCells[2]" asp-route-cell="2" />
            <input type="submit" class="button" id="btn3" value="@Model.SelectedCells[3]" asp-route-cell="3" />

            <input type="submit" class="button item4" id="btn4" value="@Model.SelectedCells[4]" asp-route-cell="4" />
            <input type="submit" class="button item5" id="btn5" value="@Model.SelectedCells[5]" asp-route-cell="5" />
            <input type="submit" class="button item6" id="btn6" value="@Model.SelectedCells[6]" asp-route-cell="6" />

            <input type="submit" class="button" id="btn7" value="@Model.SelectedCells[7]" asp-route-cell="7" />
            <input type="submit" class="button item3" id="btn8" value="@Model.SelectedCells[8]" asp-route-cell="8" />
            <input type="submit" class="button" id="btn9" value="@Model.SelectedCells[9]" asp-route-cell="9" />
            @if (Model.Win != null && Model.Win != "Draw")
            {
                <hr class="@LineDraw()"/>
            }

        </div>
    </form>
    <br />
    <br />
    <h2 class="display-1">@Model.Win</h2>

</div>

@functions {
    public string LineDraw()
    {
        string html = "";
        switch (Model.Line)
        {
            case 1:
                html = "horizontalLine item1";
                return html;

            case 2:
                html = "horizontalLine item2";
                return html;

            case 3:
                html = "horizontalLine item3";
                return html;

            case 4:
                html = "verticalLine item4";
                return html;

            case 5:
                html = "verticalLine item5";
                return html;

            case 6:
                html = "verticalLine item6";
                return html;

            case 7:
                html = "diagonalLine item5";
                return html;

            case 8:
                html = "counterDiagonalLine item5";
                return html;
            default:
                return "Yes";

        }
    }
}