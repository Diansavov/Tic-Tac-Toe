@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@section Styles{
    <link rel="stylesheet" href="~/css/user.css" />
}

<div class="text-center">

    <h1 class="display-1">Tic-Tac-Toe</h1>

    <form method="post">
        <div class="grid-container">
            <input type="submit" class="button" id="btn1" value="@Model.SelectedCells[1]" asp-route-cell="1" />
            <input type="submit" class="button" id="btn2" value="@Model.SelectedCells[2]" asp-route-cell="2" />
            <input type="submit" class="button" id="btn3" value="@Model.SelectedCells[3]" asp-route-cell="3" />

            <input type="submit" class="button" id="btn4" value="@Model.SelectedCells[4]" asp-route-cell="4" />
            <input type="submit" class="button item" id="btn5" value="@Model.SelectedCells[5]" asp-route-cell="5" />
            <input type="submit" class="button" id="btn6" value="@Model.SelectedCells[6]" asp-route-cell="6" />

            <input type="submit" class="button" id="btn7" value="@Model.SelectedCells[7]" asp-route-cell="7" />
            <input type="submit" class="button" id="btn8" value="@Model.SelectedCells[8]" asp-route-cell="8" />
            <input type="submit" class="button" id="btn9" value="@Model.SelectedCells[9]" asp-route-cell="9" />
            <@LineDraw() />
        </div>
    </form>

    <h2>@Model.Win</h2>

</div>

@functions {
    public string LineDraw()
    {
        string html = "";
        switch (Model.Line)
        {
            case 1:
                html = "hr class=" + "counterDiagonalLine item";
                return "Yes";

            case 2:
                html = "hr class=" + "counterDiagonalLine item";
                return "Yes";

            case 3:
                html = "hr class=" + "counterDiagonalLine item";
                return "Yes";

            case 4:
                html = "hr class=" + "counterDiagonalLine item";
                return "Yes";

            case 5:
                html = "hr class=" + "counterDiagonalLine item";
                return "Yes";

            case 6:
                html = "hr class=" + "counterDiagonalLine item";
                return "Yes";

            case 7:
                html = "hr class=" + "DiagonalLine item";
                return "Yes";

            case 8:
                html = "hr class=" + "counterDiagonalLine item";
                return html;
            default:
                return "Yes";

        }
    }
}